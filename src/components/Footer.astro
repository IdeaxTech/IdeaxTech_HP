<style>
	.unbounded-300 {
		font-family: 'Unbounded Variable', sans-serif;
		font-optical-sizing: auto;
		font-weight: 300;
		font-style: normal;
	}

	.footer {
		background-color: #fdfdfc;
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 80px 120px;
	}

	.footer-content-left {
		flex: 1;
		text-align: left;
	}

	.footer-content-left-social {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.footer-content-left-title {
		font-size: 64px;
	}

	.footer-content-left-links {
		display: flex;
		flex-direction: row;
		color: #000000;
	}

	.footer-content-left-links a {
		text-decoration: none;
		margin-right: 20px;
		color: #6f6f70;
		font-size: 18px;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.footer-content-left-links a img {
		width: 20px;
		height: 20px;
	}

	.footer-bottom {
		padding: 1px;
		background-color: #e7e6e7;
		text-align: center;
	}
</style>.
