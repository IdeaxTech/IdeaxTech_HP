---
interface Props {
  category?: string;
}

const { category } = Astro.props;
---
<span class="article-category">{category || 'カテゴリなし'}</span>

<style>
	.article-category {
		background-color: #88d498;
		color: #2c2c2c;
		font-size: 0.8rem;
		padding: 0.3em 1.4rem;
		border-radius: 1rem;
		margin-right: 1rem;
		font-family: 'hiragino-kaku-gothic-pron', sans-serif;
	}
</style>
