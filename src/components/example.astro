---
const { img, title, text } = Astro.props;
---

<div class="example-card">
	<div class="example-card-inner">
		<div class="example-card-image-wrapper">
			<img class="example-card-image" src={img} alt={title} />
		</div>
		<div class="example-card-content">
			<h3 class="example-card-title">{title}</h3>
			<p class="example-card-text">{text}</p>
		</div>
	</div>
</div>

<style>
	.example-card {
		border: 1px solid #000;
		border-radius: 6px;
		padding: 2rem;
		background-color: #fff;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.example-card-inner {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 32px;
	}

	.example-card-image-wrapper {
		aspect-ratio: 1 / 1;
		width: 100%;
		height: 100%;
		max-width: 300px;
		border-radius: 20px;
		overflow: hidden;
		background: #fff;
		margin: 0 auto;
	}

	.example-card-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.example-card-content {
		display: flex;
		flex-direction: column;
		gap: 8px;
		width: 100%;
		max-width: 310px;
		text-align: left;
	}

	.example-card-title {
		margin: 0;
		font-size: 2rem;
		font-weight: 600;
		color: #ff3399;
		font-family: 'hiragino-kaku-gothic-pron', sans-serif;
	}

	.example-card-text {
		margin: 0;
		font-size: 1rem;
		font-weight: 500;
		color: #ff3399;
		line-height: 1.5;
		font-family: 'hiragino-kaku-gothic-pron', sans-serif;
	}
</style>
