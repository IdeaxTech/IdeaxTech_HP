---
const { img, title, text } = Astro.props;
---

<div class="example-card">
  <div class="example-card-inner">
    <div class="example-card-image-wrapper">
      <img class="example-card-image" src={img} alt={title} />
    </div>
    <div class="example-card-content">
      <h3 class="example-card-title">{title}</h3>
      <p class="example-card-text">{text}</p>
    </div>
  </div>
</div>

<style>
  .example-card {
    border: 1px solid #000;
    border-radius: 6px;
    padding: 2rem;
    background-color: #fff;
    display: flex;
    align-items: center;
  }

  .example-card-inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .example-card-image-wrapper {
    aspect-ratio: 1 / 1;
    width: 100%;
    max-width: 300px;
    border-radius: 20px;
    overflow: hidden;
    background: #eee;
  }

  .example-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .example-card-content {
    width: 100%;
    max-width: 310px;
    text-align: left;
  }

  .example-card-title {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 700;
    color: #ff3399;
  }

  .example-card-text {
    margin: 1rem 0;
    font-size: 1rem;
    font-weight: 500;
    color: #ff3399;
    line-height: 1.6;
  }
</style>
